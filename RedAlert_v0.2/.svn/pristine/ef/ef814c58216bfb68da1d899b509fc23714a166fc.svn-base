                        <property name="methodName" value="syncServerInfo"/>
                        <property name="jobType" value="0"/>
                        <property name="repeatRunRule" value="0 0 3 * * ?"/>
                        <property name="runOnServer" value="1"/>
                        <property name="runOnStart" value="0"/>
